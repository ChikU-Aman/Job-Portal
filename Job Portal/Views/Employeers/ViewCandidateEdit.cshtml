@model Job_Portal.Models.Candidate

@{
    ViewData["Title"] = "ViewCandidateEdit";
    Layout = "_Layout";
}

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewCandidateEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="ApplicantName" />
            <div class="form-group">
                <label asp-for="ApplicantName" class="control-label"></label>
                <input asp-for="ApplicantName" class="form-control" name="name" value="@ViewBag.name" disabled />
                <span asp-validation-for="ApplicantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-control" id="Status" name="JobStatus">
                    @foreach (var s in ViewBag.s)
                    {
                        <option>@s.StatusName</option>
                    }
                </select>
                </td>
            </div>
            <div class="form-group">
                <a asp-action="ShowResumeByEmployee" asp-controller="ResumeUpload" asp-route-id="@ViewBag.id">Show Resume</a>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
